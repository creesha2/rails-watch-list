<div class="container">
  <h1><%= @list.name %></h1>

  <% if @list.photo_url.present? %>
    <img src="<%= @list.photo_url %>" alt="<%= @list.name %>">
  <% end %>

  <h2>Movies in this list:</h2>
  <% if @list.movies.any? %>
    <ul>
      <% @list.movies.each do |movie| %>
        <li>
          <div>
            <h5><%= movie.title %></h5>
            <p><%= movie.overview %></p>
            <p>Rating: <%= movie.rating %></p>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No movies in this list yet. Why not <%= link_to "add one?", new_list_bookmark_path(@list) %> (will be implemented later)</p>
  <% end %>


  <%= link_to "Add a new movie", new_list_bookmark_path(@list), class: "btn btn-info mb-3" %> (to be implemented later)
  <%= link_to "Back to all lists", lists_path, class: "btn btn-secondary mb-3" %>
</div>
