<h1>All My Movies</h1>

<div>
  <% @lists.each do |list| %>
    <div>
      <div>
        <% if list.photo_url.present? %>
          <img src="<%= list.photo_url %>" alt="<%= list.name %>">
        <% end %>
        <div>
          <h5><%= link_to list.name, list_path(list) %></h5>
          <p>
          </p>
          <%= link_to "View Details", list_path(list) %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Create a new list", new_list_path, class: "btn btn-success mt-4" %>
